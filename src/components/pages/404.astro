---
import BaseLayout from "@layouts/BaseLayout.astro";

import Hero from "@components/layout/Hero.astro";

import * as i18n from "@i18n";

const locale = i18n.getLocaleFromUrl(Astro.url);
const t = i18n.getTranslations(locale);
---

<BaseLayout
  title={t.error404.head.title}
  description={t.error404.head.description}
>
  <Hero title={t.error404.title} tagline={t.error404.tagline} />
</BaseLayout>
