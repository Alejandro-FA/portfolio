---
import "@fontsource-variable/jetbrains-mono";
---

<div class="markdown-content">
  <slot />
</div>

<style is:global>
  html.theme-dark .astro-code,
  html.theme-dark .astro-code span {
    color: var(--shiki-dark) !important;
  }

  .markdown-content {
    max-width: 65ch;
    margin-inline: auto;
    font-size: var(--text-md);
    --md-margin: 1rem;
    counter-reset: heading table figure;

    h1,
    h2,
    h3,
    h4,
    h5 {
      color: var(--md-sys-color-primary);
    }

    h1 {
      font-size: var(--text-3xl);
      margin-top: 4rem;
    }

    h2 {
      font-size: var(--text-2xl);
      margin-top: 3rem;
      counter-reset: subheading;
    }

    h3 {
      font-size: var(--text-xl);
      margin-top: 2rem;
      counter-reset: subsubheading;
    }

    h4 {
      font-size: var(--text-lg);
      margin-top: 1.5rem;
    }

    h5 {
      font-size: var(--text-md);
      margin-top: var(--md-margin);
    }

    h2::before,
    h3::before,
    h4::before {
      margin-right: 0.75rem;
    }

    h2::before {
      content: counter(heading) ". ";
      counter-increment: heading;
    }

    h3::before {
      content: counter(heading) "." counter(subheading) " ";
      counter-increment: subheading;
    }

    h4::before {
      content: counter(heading) "." counter(subheading) "."
        counter(subsubheading) " ";
      counter-increment: subsubheading;
    }

    /* Disable automatic numbering for the abstract and references sections */
    section:has(h2#abstract),
    section:has(h2#references),
    section:has(h2#bibliography) {
      h2::before,
      h3::before,
      h4::before {
        content: none;
      }
    }

    /* Use letters counter for the Appendix section */
    section:has(h2#appendix),
    section:has(h2#appendices) {
      counter-reset: heading-appendix;

      h3 {
        counter-reset: subheading-appendix;
      }

      h2::before {
        content: none;
      }

      h3::before {
        content: counter(heading-appendix, upper-alpha) ". ";
        counter-increment: heading-appendix;
      }

      h4::before {
        content: counter(heading-appendix, upper-alpha) "."
          counter(subheading-appendix) " ";
        counter-increment: subheading-appendix;
      }
    }

    figcaption::before {
      content: "Figure " counter(figure) ". ";
      font-weight: bold;
      counter-increment: figure;
    }

    p {
      margin-top: var(--md-margin);
    }

    p + p,
    ol + p,
    ul + p,
    table + p,
    figure + p,
    img + p,
    pre + p {
      text-indent: 1.5rem;
    }

    li {
      margin-top: var(--md-margin);

      + li {
        margin-top: 0.75rem;
      }
    }

    a {
      font-weight: bold;
      text-decoration: 1px solid underline transparent;
      text-underline-offset: 0.25em;
      transition: text-decoration-color var(--theme-transition);
    }

    a:hover,
    a:focus {
      text-decoration-color: currentColor;
    }

    img {
      border-radius: 1.5rem;
      box-shadow: var(--shadow-sm);
      background: var(--md-sys-color-surface-container-low);
      border: 1px solid var(--outline-color);
    }

    blockquote {
      font-size: var(--text-lg);
      font-family: var(--font-brand);
      font-weight: 600;
      line-height: 1.1;
      padding-inline-start: 1.5rem;
      border-inline-start: 0.25rem solid var(--md-sys-color-tertiary);
      color: color-mix(
        in srgb,
        var(--md-sys-color-tertiary) 40%,
        var(--md-sys-color-on-surface)
      );
    }

    /* Code blocks */
    pre {
      border: 1px solid var(--outline-color);
      border-radius: 0.75rem;
      padding: 0.75rem;
      margin-top: var(--md-margin);
      background-color: var(--surface-container-color) !important;
    }

    /* Code text */
    code {
      font-size: var(--text-sm);
      font-family: "JetBrains Mono Variable", monospace;
    }

    /* rehype-citation reference entries */
    .csl-entry {
      margin-top: 1rem;

      + .csl-entry {
        margin-top: 0.75rem;
      }
    }

    .footnotes {
      border-top: dashed 1px var(--md-sys-color-on-surface-variant);
      font-size: var(--text-sm);
      margin-top: 4rem;
    }

    table {
      width: 90%;
      margin-block: 2.5rem;
      border-block: 2px solid var(--md-sys-color-on-surface-variant);
      border-collapse: collapse;
      justify-self: center;
      font-size: var(--text-sm);

      p {
        margin: 0;
      }

      caption {
        margin-bottom: 1.5rem;
      }

      caption p:first-of-type::before {
        content: "Table " counter(table) ". ";
        font-weight: bold;
        counter-increment: table;
      }

      thead th {
        border-block: 1px solid var(--md-sys-color-on-surface-variant);
      }

      th,
      td {
        padding: 0.5rem;
        text-align: center;
      }
    }

    figure {
      width: 90%;
      margin-block: 2.5rem;
      justify-self: center;
    }

    figcaption {
      font-size: var(--text-sm);
      margin-top: 0rem;
      text-align: center;
    }

    @media (min-width: 50em) {
      font-size: var(--text-lg);

      h1 {
        font-size: var(--text-4xl);
      }

      h2 {
        font-size: var(--text-3xl);
      }

      h3 {
        font-size: var(--text-2xl);
      }

      h4 {
        font-size: var(--text-xl);
      }

      h5 {
        font-size: var(--text-lg);
      }

      blockquote {
        font-size: var(--text-xl);
      }

      table {
        font-size: var(--text-md);
      }

      figcaption {
        font-size: var(--text-md);
      }

      .footnotes {
        font-size: var(--text-md);
      }

      pre {
        border-radius: 1.5rem;
        padding: 1rem;
      }

      code {
        font-size: var(--text-md);
      }
    }
  }
</style>
