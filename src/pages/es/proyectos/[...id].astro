---
import type { CollectionEntry } from "astro:content";

import ProjectPage from "@components/pages/Projects/ProjectPage.astro";

import * as i18n from "@i18n";

interface Props {
  entry: CollectionEntry<"projects">;
}

// This is a dynamic route that generates a page for every Markdown file in src/data/projects
// Read more about dynamic routes and this `getStaticPaths` function in the Astro docs:
// https://docs.astro.build/en/core-concepts/routing/#dynamic-routes
export const getStaticPaths = i18n.getLocalizedCollectionPaths(
  "es",
  "projects",
);

const { entry } = Astro.props;
---

<ProjectPage entry={entry} />
